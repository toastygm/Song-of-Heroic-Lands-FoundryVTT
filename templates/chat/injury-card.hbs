<div class="hmk chat-card item-card" data-actor-id="{{actorId}}">
    <header class="card-header">
        <h3 class="title">{{bodyZoneName}} Injury</h3>
        <h4 class="subtitle">{{name}}</h4>
    </header>

    {{#unless isRandom}}
    <div class="card-content notice-body">
        <span>Location Not Random!</span>
    </div>
    {{/unless}}

    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Zone Die Formula:</span>
            <span class="value">{{zoneDieFormula}}</span>
        </div>
    </div>

    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Zone:</span>
            {{#if outsideZone}}
            <span class="value failure-text">None ({{zoneNum}})</span>
            {{else}}
            <span class="value">{{bodyZoneName}} ({{zoneNum}})</span>
            {{/if}}
        </div>
        {{#if outsideZone}}
        <div>
            <span class="note failure-text"
                >Hit outside allowed zones<br />Max zone {{maxZones}}, hit zone
                {{zoneNum}}<br />No effect</span
            >
        </div>
        {{/if}}
    </div>

    {{#unless outsideZone}}
    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Body Part:</span>
            <span class="value">{{bodyPartName}}</span>
        </div>
    </div>
    {{/unless}}

    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Aspect:</span>
            <span class="value">{{aspect}}</span>
        </div>
    </div>

    {{#if armorReduction}}
    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Armor Reduction:</span>
            <span class="value">{{armorReduction}}</span>
            <span class="note"
                >Armor value has been reduced by<br />Armor Reduction
                value</span
            >
        </div>
    </div>
    {{/if}}

    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Armor Layers (prot):</span>
            <span class="value">{{armorType}} ({{armorValue}})</span>
        </div>
    </div>

    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Impact:</span>
            <span class="value"><strong>{{impactVal}}</strong></span>
        </div>
    </div>

    {{#if isGlancingBlow}}
    <div class="card-content center">
        <div class="flexrow">
            <span class="note success-test"
                >Rigid armor minimizes impact.<br />Glancing Blow!</span
            >
        </div>
    </div>
    {{/if}} {{#unless isInjured}}
    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Injury Level:</span>
            <span class="value success-text">No Injury</span>
        </div>
    </div>
    {{else}}
    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Injury Level:</span>
            <span class="value failure-text">{{injuryLevelText}}</span>
        </div>
    </div>

    <div class="card-content center">
        <div class="flexrow">
            <span class="label">Shock Index:</span>
            <span class="value">{{shockIndex}}</span>
        </div>
        <div class="flexrow">
            {{#if (gt shockIndex 4)}}
            <span class="note failure-text">Make a Shock roll!</span>
            {{else}}
            <span class="note">Shock roll not needed</span>
            {{/if}}
        </div>
    </div>

    {{#if isBleeder}}
    <div class="card-content center">
        <span class="note">NOTE: Injury is a bleeder</span>
    </div>
    {{/if}} {{#if isFumble}}
    <div class="card-content center">
        <span class="note failure-text">Grevious Mishap: Fumbles</span>
    </div>
    {{/if}} {{#if isStumble}}
    <div class="card-content center">
        <span class="note failure-text">Grevious Mishap: Stumbles</span>
    </div>
    {{/if}} {{#if isAmputate}}
    <div class="card-content center">
        <span class="note failure-text"
            >NOTE: Perform Strength test<br />
            {{#if amputateModifier}} with a -{{amputateModifier}} penalty<br />
            {{/if}} to determine if limb is amputated<br />
            (you will have to make this roll manually).</span
        >
    </div>
    {{/if}} {{#if addToCharSheet}}
    <div class="card-content center">
        <span>Injury recorded on character sheet</span>
    </div>
    {{/if}}

    <div class="card-buttons">
        {{#if (gt shockIndex 4)}}
        <button
            data-action="shock"
            data-handler-uuid="{{handlerActorUuid}}"
            data-shock-index="{{shockIndex}}">
            Shock Roll
        </button>
        {{/if}}
    </div>
    {{/unless}}
</div>
