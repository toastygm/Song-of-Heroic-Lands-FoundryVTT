<form class="{{cssClass}}" autocomplete="off">
    {{> "sohl.item-header"}}

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="properties">Common</a>
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="actions">Actions</a>
        <a class="item" data-tab="nesteditems">Nested</a>
        <a class="item" data-tab="effects">Effects</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Properties Tab --}}
        <div class="tab properties" data-group="primary" data-tab="properties">
            <div class="grid grid-3col">
                {{> "sohl.item-gear"}}
                {{formField fields.material rootId="arm-mat" classes="text-field" stacked=true value=system.material}}
                {{formField fields.abbrev rootId="ail-abbr" classes="text-field" stacked=true value=system.abbrev}}
                <div class="form-group stacked text-field">
                    <label>Encumbrance</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.encumbrance name="flags.sohl.legendary.encumbrance" step=0.01 min=0}}
                    </div>
                </div>
            </div>
            <fieldset class="armorgear-flexiblelocations-list" id="armorgear-flexiblelocations-list">
                <legend>Body Armor Locations</legend>
                <div class="armorgear-location flexrow" id="armorgear-flexiblelocations-value">
                    <a class="add-array-item"
                        data-array="system.locations.flexible"
                        data-unique="true"
                        data-dtype="String"
                        data-default-value=""
                        data-title="Flexible Location"
                        ><i class="fas fa-plus"></i> Add Flexible Location</a>
                </div>
                <ol class="grid grid-4col"
                    id="armorgear-flexiblelocation-display">
                    {{#each idata.locations.flexible}}
                    <li class="armor-location">
                        <span class="name">{{this}}</span>
                        <a class="delete-array-item"
                            data-array="system.locations.flexible"
                            data-unique="true"
                            data-value="{{this}}"
                            title="Flexible Location"
                            ><i class="fas fa-trash"></i></a>
                    </li>
                    {{/each}}
                </ol>
                <div class="armorgear-location flexrow" id="armorgear-rigidlocations-value">
                    <a class="add-array-item"
                        data-array="system.locations.rigid"
                        data-unique="true"
                        data-dtype="String"
                        data-default-value=""
                        data-title="Rigid Location"
                        ><i class="fas fa-plus"></i> Add Rigid Location</a>
                </div>
                <ol class="grid grid-4col" id="armorgear-rigidlocations-display">
                    {{#each idata.locations.rigid}}
                    <li class="armor-location">
                        <span class="name">{{this}}</span>
                        <a
                            class="delete-array-item"
                            data-array="system.locations.rigid"
                            data-unique="true"
                            data-value="{{this}}"
                            title="Rigid Location"
                            ><i class="fas fa-trash"></i
                        ></a>
                    </li>
                    {{/each}}
                </ol>
            </fieldset>
            {{> "sohl.item-refnote"}}
        </div>

        {{!-- Description Tab --}}
        <div class="tab description"
            id="armorgear-desc"
            data-group="primary"
            data-tab="description">
            {{editor idata.description target="system.description" button=true
            owner=owner editable=editable}}
        </div>

        {{!-- Actions Tab --}}
        <div class="tab actions" data-group="primary" data-tab="actions">
            {{> "sohl.item-actions-list"}}
        </div>

        {{!-- Nested Items Tab --}}
        <div class="tab nesteditems"
            data-group="primary"
            data-tab="nesteditems">
            {{> "sohl.item-nesteditems-list"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "sohl.item-active-effects"}}
        </div>
    </section>
</form>
