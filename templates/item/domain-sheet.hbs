<form class="{{cssClass}}" autocomplete="off">
    {{> "sohl.item-header"}}

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="properties">Common</a>
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="actions">Actions</a>
        <a class="item" data-tab="nesteditems">Nested</a>
        <a class="item" data-tab="effects">Effects</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Properties Tab --}}
        <div class="tab properties" data-group="primary" data-tab="properties">
            <div class="grid grid-2col">
                {{formField fields.abbrev rootId="dom-abbr" classes="text-field" stacked=true value=system.abbrev}}
            </div>
            {{#if (eq system.$category "astral")}}
            <div class="form-group text-field">
                <input type="checkbox" name="flags.sohl.cusp" {{checked flags.sohl.cusp}} data-type="Boolean" />
                <label>Is Cusp</label>
            </div>
            <fieldset class="dom-ssmod" id="dom-ssmod">
                <legend>Astral Modifiers</legend>
                <div class="form-group stacked text-field">
                    <label>Earth</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.ssMod.earth name="flags.sohl.legendary.ssMod.earth" step=1 min=0}}
                    </div>
                </div>
                <div class="form-group stacked text-field">
                    <label>Metal</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.ssMod.metal name="flags.sohl.legendary.ssMod.metal" step=1 min=0}}
                    </div>
                </div>
                <div class="form-group stacked text-field">
                    <label>Fire</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.ssMod.fire name="flags.sohl.legendary.ssMod.fire" step=1 min=0}}
                    </div>
                </div>
                <div class="form-group stacked text-field">
                    <label>Wind</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.ssMod.wind name="flags.sohl.legendary.ssMod.wind" step=1 min=0}}
                    </div>
                </div>
                <div class="form-group stacked text-field">
                    <label>Spirit</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.ssMod.spirit name="flags.sohl.legendary.ssMod.spirit" step=1 min=0}}
                    </div>
                </div>
                <div class="form-group stacked text-field">
                    <label>Water</label>
                    <div class="form-fields">
                        {{numberInput flags.sohl.legendary.ssMod.water name="flags.sohl.legendary.ssMod.water" step=1 min=0}}
                    </div>
                </div>
            </fieldset>
            {{/if}}
            {{#if (eq system.$category "divine")}}
            <fieldset class="dom-divemb-list" id="dom-divemb-list">
                <legend>Divine Embodiments</legend>
                <div class="dom-divemb flexrow" id="dom-divemb-value">
                    <a class="add-array-item"
                        data-array="flags.sohl.legendary.embodiments"
                        data-dtype="String"
                        data-default-value=""
                        data-unique="true"
                        data-title="Divine Embodiment"
                        ><i class="fas fa-plus"></i> Add Divine Embodiment</a>
                </div>
                <ol class="grid grid-4col" id="dom-divemb-display">
                    {{#each flags.sohl.legendary.embodiments}}
                    <li class="armor-location">
                        <span class="name">{{this}}</span>
                        <a class="delete-array-item"
                            data-array="flags.sohl.legendary.embodiments"
                            data-value="{{this}}"
                            title="Divine Embodiment"
                            ><i class="fas fa-trash"></i></a>
                    </li>
                    {{/each}}
                </ol>
            </fieldset>
            {{/if}}
            {{> "sohl.item-refnote"}}
        </div>

        {{!-- Description Tab --}}
        <div
            class="tab description"
            data-group="primary"
            data-tab="description">
            {{editor idata.description target="system.description" button=true
            owner=owner editable=editable}}
        </div>

        {{!-- Actions Tab --}}
        <div class="tab actions" data-group="primary" data-tab="actions">
            {{> "sohl.item-actions-list"}}
        </div>

        {{!-- Nested Items Tab --}}
        <div
            class="tab nesteditems"
            data-group="primary"
            data-tab="nesteditems">
            {{> "sohl.item-nesteditems-list"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "sohl.item-active-effects"}}
        </div>
    </section>
</form>
